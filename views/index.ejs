    }
    .nav-link:hover {
      color: #10b981 !important;
      background: rgba(16, 185, 129, 0.1);
      border-radius: 4px;
    }
    .nav-link::after {
      content: '';
      position: absolute;
      width: 0;
      height: 2px;
      bottom: 4px;
      left: 12px;
      background: #10b981;
      transition: width 0.3s ease;
    }
    .nav-link:hover::after {
      width: calc(100% - 24px);
    }
    .nav-link.active {
