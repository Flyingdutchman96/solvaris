            callbacks: {
              label: function(context) {
                return `${context.dataset.label}: ${context.raw} €/MWh`;
              }
            }
          }
        }
      }
    });

    // Allocation Flow Chart (Sankey simulation with Chart.js)
    const ctxFlow = document.getElementById('allocation-flow-chart').getContext('2d');
    new Chart(ctxFlow, {
      type: 'bar',
      data: {
        labels: ['Equity', 'Core Assets', 'Satellite Assets', 'Hedging'],
        datasets: [{
          data: [100, 50, 50, 20],
          backgroundColor: ['#FBBF24', '#0A1F44', '#0D9488', '#374151']
        }]
      },
      options: {
        responsive: true,
        plugins: {
          tooltip: {
            callbacks: {
              label: function(context) {
                return `${context.label}: ${context.raw}%`;
              }
            }
          }
        }
      }
    });

    // EU Map
    const map = L.map('eu-map').setView([54, 15], 4);
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a>'
    }).addTo(map);

    const coreMarkets = ['DE', 'GB', 'NL'];
    const satelliteMarkets = ['PL', 'RO', 'BG', 'HR', 'EE', 'LV', 'LT'];
    const countryData = {
      'DE': { category: 'Core', IRR: '6–8%', note: 'Operational assets' },
      'GB': { category: 'Core', IRR: '6–8%', note: 'Operational assets' },
      'NL': { category: 'Core', IRR: '6–8%', note: 'Operational assets' },
      'PL': { category: 'Satellite', IRR: '12–15%', note: 'Active BESS pipeline' },
      'RO': { category: 'Satellite', IRR: '12–15%', note: 'Active BESS pipeline' },
      'BG': { category: 'Satellite', IRR: '12–15%', note: 'Active BESS pipeline' },
      'HR': { category: 'Satellite', IRR: '12–15%', note: 'Active BESS pipeline' },
      'EE': { category: 'Satellite', IRR: '12–15%', note: 'Active BESS pipeline' },
      'LV': { category: 'Satellite', IRR: '12–15%', note: 'Active BESS pipeline' },
      'LT': { category: 'Satellite', IRR: '12–15%', note: 'Active BESS pipeline' }
    };

    const geoJsonLayer = L.geoJson(null, {
      style: function(feature) {
        const countryCode = feature.properties.iso_a2;
        return {
          fillColor: coreMarkets.includes(countryCode) ? '#0A1F44' : satelliteMarkets.includes(countryCode) ? '#0D9488' : '#D1D5DB',
          weight: 1,
          opacity: 1,
          color: '#F3F4F6',
          fillOpacity: 0.7
        };
      },
      onEachFeature: function(feature, layer) {
        const countryCode = feature.properties.iso_a2;
        if (countryData[countryCode]) {
          const { category, IRR, note } = countryData[countryCode];
          layer.bindTooltip(`<strong>${feature.properties.name}</strong><br>Category: ${category}<br>Target IRR: ${IRR}<br>${note}`, { sticky: true });
          layer.on('click', function() {
            alert(`Market Snapshot for ${feature.properties.name}\nCurrent Power Prices: Sample data\nRegulatory Highlights: Sample data\nSample Projects: Sample data`);
          });
        }
      }
    }).addTo(map);

    // Load GeoJSON data
    fetch('https://raw.githubusercontent.com/datasets/geo-countries/master/data/countries.geojson')
      .then(response => response.json())
      .then(data => geoJsonLayer.addData(data));

    // Lazy-load charts and map
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.querySelectorAll('canvas').forEach(canvas => {
            canvas.dispatchEvent(new Event('chart-init'));
          });
          if (entry.target.id === 'eu-map') {
            map.invalidateSize();
          }
        }
      });
    }, { threshold: 0.1 });

    document.querySelectorAll('.chart-container, #eu-map').forEach(el => observer.observe(el));
  </script>
</body>
